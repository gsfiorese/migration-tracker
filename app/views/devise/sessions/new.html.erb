<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-container" }) do |f| %>
  <div class="form-card">
    <h2 class="form-title">Log in</h2>

    <!-- Email Field -->
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <!-- Password Field -->
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <!-- Remember Me (optional) -->
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <!-- Submit Button -->
    <div class="actions">
      <%= f.submit "Log in", class: "form-submit" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
