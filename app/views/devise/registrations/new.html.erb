<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-container" }) do |f| %>
  <div class="form-card">
    <h2 class="form-title">Sign Up</h2>

    <!-- Email Field -->
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <!-- Password Field -->
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
    </div>

    <!-- Submit Button -->
    <div class="actions">
      <%= f.submit "Sign Up", class: "form-submit" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
