<h1>Logs</h1>
<p>This is the admin logs dashboard for managing the application.</p>

  <div class="return-button">
    <%= link_to "Return to Admin Menu", user_admin_index_path, class: "admin-link" %>
  </div>
</div>
<% if @logs.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Type</th>
        <th>Message</th>
        <th>User</th>
        <th>Role</th>
        <th>Source</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @logs.each do |log| %>
        <tr>
          <td><%= log.id %></td>
          <td><%= log.log_type %></td>
          <td><%= log.message %></td>
          <td><%= log_user_name(log) %></td>
          <td><%= log_user_role(log) %></td>
          <td><%= log.source %></td>
          <td><%= log.created_at.strftime('%d-%m-%y %H:%M') %></td>
          <td>
            <%= link_to 'Detail', '#', class: 'btn btn-sm btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @logs %>
<% else %>
  <p>No logs found.</p>
<% end %>
