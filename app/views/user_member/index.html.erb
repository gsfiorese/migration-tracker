<%= stylesheet_link_tag 'member_application', media: 'all' %>


<h1>Welcome, Member!</h1>
<p>This is the member dashboard for accessing member-specific features.</p>

<%= link_to "Log Off", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, id: "logout-link", class: "btn btn-danger" %>

<% if @visa_categories.present? %>
  <h2>Visa Categories</h2>
  <div class="row">
    <% @visa_categories.each do |category| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= category.name %></h5>
            <p class="card-text"><%= category.about %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No visa categories available.</p>
<% end %>
