<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if @visa %>
  <h2>Cases for Visa: <%= @visa.name %> (Subclass: <%= @visa.subclass %>)</h2>
<% else %>
  <h2>All Cases</h2>
<% end %>

<% if @cases.any? %>
<h1>Case List</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Lodgement Date</th>
      <th>CO Contact Date</th>
      <th>CO Response Date</th>
      <th>Grant Date</th>
      <th>Assessment Commence</th>
      <th>Grant Days</th>
      <th>Days to CO Contact</th>
      <th>Days Grant After CO Contact</th>
      <th>Work Points Claimed</th>
      <th>Total Points</th>
      <th>Days After Assessment</th>
      <th>On Shore</th>
      <th>Case Status</th>
      <th>Agency</th>
      <th>Employment Verification</th>
      <th>Active</th>
      <th>Sponsor State</th>
      <th>Documents</th>
      <th>CO Contact Type</th>
      <th>English Proficiency</th>
    </tr>
  </thead>
  <tbody>
    <% @cases.each do |case_item| %>
      <tr>
        <td><%= case_item.user.first_name %></td>
        <td><%= case_item.user.last_name %></td>
        <td><%= case_item.lodgement_date %></td>
        <td><%= case_item.co_contact_date %></td>
        <td><%= case_item.co_response_date %></td>
        <td><%= case_item.grant_date %></td>
        <td><%= case_item.assess_commence %></td>
        <td><%= case_item.grant_days %></td>
        <td><%= case_item.days_to_co_contact %></td>
        <td><%= case_item.days_grant_aftr_co_contact %></td>
        <td><%= case_item.work_p_claim %></td>
        <td><%= case_item.total_p %></td>
        <td><%= case_item.days_aftr_assess %></td>
        <td><%= case_item.on_shore ? 'Yes' : 'No' %></td>
        <td><%= case_item.case_status ? 'Open' : 'Closed' %></td>
        <td><%= case_item.agency ? 'Yes' : 'No' %></td>
        <td><%= case_item.employment_verification ? 'Yes' : 'No' %></td>
        <td><%= case_item.active ? 'Yes' : 'No' %></td>
        <td><%= case_item.sponsor_state %></td>
        <td><%= case_item.documents %></td>
        <td><%= case_item.co_contact_type %></td>
        <td><%= case_item.engl_prof %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%# <ul>
    <% @cases.each do |case_item| %>
      <%# <li>
        <strong>Case ID:</strong> <%= case_item.id %> |
        <%# <strong>Status:</strong> <%= case_item.total_p %>
        <%# <%= link_to "View Details", user_member_case_path(case_item), class: "btn" %>
      <%# </li>
    <% end %>
  <%# </ul> %> %> %> %> %> %>
<% else %>
  <% if @visa %>
    <p>No cases found for the visa <strong><%= @visa.name %> (Subclass: <%= @visa.subclass %>)</strong>.</p>
  <% else %>
    <p>No cases found.</p>
  <% end %>
<% end %>

<% if @visa && @visa.visa_category_id %>
  <%= link_to "Back to Visas", user_member_visa_category_visas_path(@visa.visa_category_id), class: "btn" %>
<% else %>
  <%= link_to "Back to Visa Categories", user_member_visa_categories_path, class: "btn" %>
<% end %>

