<h3>Comments for Visa:</h3>
<% if @visa.comments.any? %>
  <ul id="comments-list">
    <% @visa.comments.each do |comment| %>
      <li id="comment_<%= comment.id %>">
        <strong><%= comment.user.first_name %>:</strong> <%= comment.content %>
      </li>
    <% end %>
  </ul>
